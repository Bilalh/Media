[10]
aspect=16:10





[fsi]
profile-desc="Fullscreen 16:10 aspect and bigger OSD with inverse"
vf=eq2=1.0:-0.8
brightness=-20
aspect=16:10
subfont-text-scale=5
fs=yes
loop=0
volume=15

[fun] 
