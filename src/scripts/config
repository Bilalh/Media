#put in .mplayer

# Audio Japanese Subs English use fonts for default
slang=eng
alang=jpn,jp
embeddedfonts=yes
vf-add=screenshot # allows screen shots 
subfont-osd-scale=3
subfont-text-scale=6
double=yes
ass=yes # For ssa subtitles
# quiet=yes        
really-quiet=yes   
volume=10

#converts 5 ch flac to 2 ch
# af-pan=2:1:0:0:1:1:0:0:1:0.5:0.5:1:1

[libass]
ass=true
embeddedfonts=true
#correct-pts=true

[fs]
profile-desc="Fullscreen 16:10 aspect and bigger OSD"
aspect=16:10
subfont-text-scale=5
fs=yes
volume=15

[s]
profile-desc="Puts the file on the second screen with full screen"
vo=corevideo:device_id=1
fs=yes

[T]
profile-desc="Always ontop with 480p and placed at top left"
ontop=yes
#vf=scale=480:320 bad since it does not scale well
geometry=0:0
xy=480

[t]
profile-desc="480p and placed at top left"
noontop=yes
#vf=scale=480:320 bad since it does not scale well
geometry=0:0
xy=480
subfont-text-scale=4






[fss]
profile-desc="Fullscreen 16:10 aspect and bigger OSD on second screen"
vo=corevideo:device_id=1
aspect=16:10
subfont-text-scale=5
fs=yes
volume=15

[sl]
profile-desc="Fullscreen 16:10 aspect and bigger OSD on second screen looped"
vo=corevideo:device_id=1
aspect=16:10
subfont-text-scale=4
fs=yes
loop=0
volume=15

[fsf]
profile-desc="Fullscreen 16:10 aspect and bigger OSD on first screen looped"
vo=corevideo:device_id=0
aspect=16:10
subfont-text-scale=5
fs=yes
loop=0
volume=15


